[core]
    editor = vim

[include]
    path = ~/.gitconfig.local

[push]
	default = simple

[alias]
    a       = add -A
    ac      = !git add -A && git commit                     # commit all changes
    b       = branch
    c       = commit
    ca      = commit --amend
    cts     = !git add -A && git commit -m \"$(date)\"        # commit all with a timestamp as message
    d       = diff
    dc      = diff --cached
    l       = log
    p       = push
    pf      = push -f
    pl      = pull --rebase
    rsh     = reset --hard HEAD~1                           # remove last commit completely
    rsm     = reset --mixed HEAD~1                          # undo last commit and keep changes as unstaged
    rss     = reset --soft HEAD~1                           # undo last commit and keep changes as staged
    s       = status
    sa      = status -suall                                 # show all changes

