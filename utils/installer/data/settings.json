{
  "backups": [
    ["~", ".bashrc"],
    ["~", ".bash_profile"]
  ],
  "scripts": {
    "root": ["utils", "installer", "tools"],
    "apps": ["install_apps.py"],
    "files": ["setup_files.py"],
    "repos": ["install_repos.py"]
  },
  "packages": {
    "core": [
      "xinit",
      "i3-wm",
      "i3status",
      "zsh",
      "suckless-tools",
      "terminator",
      "python-pip",
      "python3-pip",
      "gitk",
      "git-gui"
    ]
  },
  "paths": {
    "symlinks": {
      "": ["~", "dotfiles"],
      "git": {
        "gitconfig": ["~", ".gitconfig"]
      },
      "shell": {
        "zsh": {
          "zprofile": ["~", ".zprofile"],
          "zshrc": ["~", ".zshrc"]
        },
        "bash": {
          "bashrc": ["~", ".bashrc"],
          "bash_profile": ["~", ".bash_profile"]
        }
      },
      "terminals": {
        "terminator": {
          "config": ["~", ".config","terminator","config"]
        }
      },
      "vim": {
        "vimrc": ["~", ".vimrc"],
        "plugins": ["~", ".vim","plugins"]
      },
      "wm": {
        "i3": ["~", ".i3"]
      }
    }
  },
  "repositories": [
    ["git", "github", "VundleVim", "Vundle.vim", ["~", ".vim", "plugins", "Vundle.vim"]],
    ["git", "github", "robbyrussell", "oh-my-zsh", ["~", ".oh-my-zsh"]],
    ["git", "github", "tarruda", "zsh-autosuggestions", ["~", ".oh-my-zsh", "custom", "plugins"]],
    ["git", "github", "zsh-users", "zsh-syntax-highlighting", ["~", ".oh-my-zsh", "custom", "plugins"]],
    ["git", "github", "djui", "alias-tips", ["~", ".oh-my-zsh", "custom", "plugins"]],
    ["git", "github", "powerline", "fonts", ["~", "tmp", "fonts"]]
  ]
}
